# Public RPC (HTTP)
NHB_RPC_URL=https://api.nhbcoin.net/rpc
# RPC bearer token for privileged calls
NHB_RPC_TOKEN=demo-token
# Public RPC (WebSocket)
NHB_WS_URL=wss://api.nhbcoin.net/ws
# REST + event gateway (escrow/swap/loyalty/creator)
NHB_API_URL=https://gw.nhbcoin.net
# Chain ID
NHB_CHAIN_ID=187001
# HMAC demo creds (rotate in real env)
NHB_API_KEY=demo-key
NHB_API_SECRET=demo-secret

# Optional wallet for signing
NHB_WALLET_PRIVATE_KEY=0x0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef
NHB_WALLET_ADDRESS=nhb1exampleaddresshere

# App ports
STATUS_DASHBOARD_PORT=4300
NETWORK_MONITOR_PORT=4301

# Local node safeguards (used by scripts/docs when running a validator locally)
# Comma-separated list of proxy IPs that may forward client IPs to the RPC node
NHB_RPC_TRUSTED_PROXIES=127.0.0.1
# Toggle to true only when the proxy list above is accurate
NHB_RPC_TRUST_PROXY_HEADERS=false
# Suggested mempool ceiling for local dev nodes (mirrors config.mempool.MaxTransactions)
NHB_MEMPOOL_MAX_TX=2000
# Optional TLS certificate/key paths exposed for local testing of HTTPS RPC
NHB_RPC_TLS_CERT=
NHB_RPC_TLS_KEY=
