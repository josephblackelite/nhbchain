{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "Primary Prometheus datasource",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    {"type": "grafana", "id": "grafana", "name": "Grafana", "version": "10.0.0"},
    {"type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0"},
    {"type": "panel", "id": "timeseries", "name": "Time series", "version": "1.0.0"},
    {"type": "panel", "id": "stat", "name": "Stat", "version": "1.0.0"}
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
      "description": "ZapNHB minted each day across all delegators. Use spikes to validate payout cadence and detect unexpected emission surges.",
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "decimals": 2,
          "mappings": [],
          "unit": "none"
        },
        "overrides": []
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "id": 1,
      "options": {
        "legend": {"calcs": ["lastNotNull"], "displayMode": "table", "placement": "bottom"},
        "tooltip": {"mode": "multi", "sort": "desc"}
      },
      "targets": [
        {
          "exemplar": false,
          "expr": "sum(rate(nhb_staking_rewards_paid_zn_total[1d])) * 86400 / 1e18",
          "interval": "",
          "legendFormat": "Rewards per Day",
          "refId": "A"
        }
      ],
      "title": "Rewards Paid per Day",
      "type": "timeseries"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
      "description": "Aggregate ZapNHB currently bonded (sum of validator and delegator stake). Drops indicate large undelegations or slashing events.",
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "decimals": 2,
          "mappings": [],
          "unit": "none"
        },
        "overrides": []
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "id": 2,
      "options": {
        "legend": {"calcs": ["lastNotNull"], "displayMode": "table", "placement": "bottom"},
        "tooltip": {"mode": "multi", "sort": "desc"}
      },
      "targets": [
        {
          "exemplar": false,
          "expr": "sum(nhb_staking_total_staked) / 1e18",
          "interval": "",
          "legendFormat": "Total Staked",
          "refId": "A"
        }
      ],
      "title": "Total Staked ZNHB",
      "type": "timeseries"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
      "description": "Pause flag published by the staking module. Any non-zero value means delegation, undelegation, and reward claims are rejected.",
      "fieldConfig": {
        "defaults": {
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "red", "value": 0.5}
            ]
          },
          "unit": "none"
        },
        "overrides": []
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "id": 3,
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "orientation": "horizontal",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "value_and_name"
      },
      "targets": [
        {
          "exemplar": false,
          "expr": "max(nhb_staking_paused)",
          "interval": "",
          "legendFormat": "Paused",
          "refId": "A"
        }
      ],
      "title": "Staking Pause Status",
      "type": "stat"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
      "description": "Lifetime count of reward settlements that exhausted the configured emission cap. Any increase requires treasury coordination.",
      "fieldConfig": {
        "defaults": {
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 3}
            ]
          },
          "unit": "none"
        },
        "overrides": []
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "id": 4,
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center",
        "orientation": "horizontal",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "value_and_name"
      },
      "targets": [
        {
          "exemplar": false,
          "expr": "sum(nhb_staking_cap_hit_total)",
          "interval": "",
          "legendFormat": "Cap Hits",
          "refId": "A"
        }
      ],
      "title": "Emission Cap Hits",
      "type": "stat"
    }
  ],
  "refresh": "5m",
  "schemaVersion": 37,
  "style": "dark",
  "tags": ["staking"],
  "templating": {"list": []},
  "time": {"from": "now-30d", "to": "now"},
  "timepicker": {},
  "timezone": "",
  "title": "Staking Health",
  "uid": "staking-health-overview",
  "version": 1
}
