{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "Primary Prometheus datasource",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    {"type": "grafana", "id": "grafana", "name": "Grafana", "version": "10.0.0"},
    {"type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0"},
    {"type": "panel", "id": "timeseries", "name": "Time series", "version": "1.0.0"},
    {"type": "panel", "id": "stat", "name": "Stat", "version": "1.0.0"}
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "graphTooltip": 1,
  "links": [],
  "panels": [
    {
      "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
      "description": "Total ZNHB currently locked across all validators. Useful for tracking participation and pause thresholds.",
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "orange", "value": 0},
              {"color": "red", "value": 0}
            ]
          }
        },
        "overrides": []
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "id": 1,
      "options": {
        "legend": {"calcs": [], "displayMode": "table", "placement": "bottom"},
        "tooltip": {"mode": "multi", "sort": "desc"}
      },
      "targets": [
        {
          "exemplar": false,
          "expr": "sum(nhb_staking_total_staked_wei) / 1e18",
          "interval": "",
          "legendFormat": "Total Staked",
          "refId": "A"
        }
      ],
      "title": "Total Staked ZNHB",
      "type": "timeseries"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
      "description": "Preview of currently accrued but unclaimed rewards based on index differentials.",
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "orange", "value": 0},
              {"color": "red", "value": 0}
            ]
          }
        },
        "overrides": []
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "id": 2,
      "options": {
        "legend": {"calcs": [], "displayMode": "table", "placement": "bottom"},
        "tooltip": {"mode": "multi", "sort": "desc"}
      },
      "targets": [
        {
          "exemplar": false,
          "expr": "sum(nhb_staking_accrued_rewards_wei) / 1e18",
          "interval": "",
          "legendFormat": "Pending Rewards",
          "refId": "A"
        }
      ],
      "title": "Pending Rewards (Preview)",
      "type": "timeseries"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
      "description": "Rewards minted over each 30-day cycle to validate payout cadence.",
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "orange", "value": 0},
              {"color": "red", "value": 0}
            ]
          }
        },
        "overrides": []
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "id": 3,
      "options": {
        "legend": {"calcs": ["lastNotNull"], "displayMode": "table", "placement": "bottom"},
        "tooltip": {"mode": "single", "sort": "none"}
      },
      "targets": [
        {
          "exemplar": false,
          "expr": "sum(increase(nhb_staking_rewards_minted_total_wei[30d])) / 1e18",
          "interval": "",
          "legendFormat": "30d Payout",
          "refId": "A"
        }
      ],
      "title": "Monthly Payouts",
      "type": "timeseries"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
      "description": "Running total of the current calendar year's staking emissions for cap monitoring.",
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "mappings": [],
          "thresholds": {
            "mode": "percentage",
            "steps": [
              {"color": "green", "value": null},
              {"color": "orange", "value": 80},
              {"color": "red", "value": 100}
            ]
          }
        },
        "overrides": []
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "id": 4,
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "orientation": "horizontal",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "value_and_name"
      },
      "targets": [
        {
          "exemplar": false,
          "expr": "(sum(nhb_staking_emission_ytd_wei) / 1e18) / (staking_max_emission_per_year_wei / 1e18) * 100",
          "interval": "",
          "legendFormat": "Emission YTD % of Cap",
          "refId": "A"
        }
      ],
      "title": "Emission YTD vs Cap",
      "type": "stat"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
      "description": "Alert helper panel showing utilisation bands for the emission cap. Use as a trigger for paging rules.",
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 80},
              {"color": "orange", "value": 90},
              {"color": "red", "value": 100}
            ]
          },
          "unit": "percent"
        },
        "overrides": []
      },
      "gridPos": {"h": 6, "w": 24, "x": 0, "y": 16},
      "id": 5,
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center",
        "orientation": "horizontal",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "value_and_name"
      },
      "targets": [
        {
          "exemplar": false,
          "expr": "(sum(nhb_staking_emission_ytd_wei) / 1e18) / (staking_max_emission_per_year_wei / 1e18) * 100",
          "interval": "",
          "legendFormat": "Emission Cap Utilisation",
          "refId": "A"
        }
      ],
      "title": "Emission Cap Alerts (80/90/100%)",
      "type": "stat"
    }
  ],
  "refresh": "5m",
  "schemaVersion": 37,
  "style": "dark",
  "tags": ["staking"],
  "templating": {
    "list": []
  },
  "time": {
    "from": "now-30d",
    "to": "now"
  },
  "timepicker": {},
  "timezone": "",
  "title": "Staking Program Overview",
  "uid": "staking-program-overview",
  "version": 1
}
